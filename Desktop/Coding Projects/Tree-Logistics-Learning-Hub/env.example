# Database
DATABASE_URL="postgresql://user:password@localhost:5432/tree_learning_hub?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# AWS S3 (or S3-compatible storage)
AWS_REGION="eu-central-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
S3_BUCKET_NAME="tree-learning-hub"
S3_ENDPOINT="" # Optional: for S3-compatible services like MinIO

# Encryption (for PII fields)
ENCRYPTION_KEY="your-encryption-key-here-32-chars-min"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@treelogistics.com"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Inngest (Background Jobs)
INNGEST_EVENT_KEY="your-inngest-event-key"
INNGEST_SIGNING_KEY="your-inngest-signing-key"

# App Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
MAX_FILE_SIZE_MB="10"
SESSION_MAX_AGE="2592000" # 30 days

# Rate Limiting (Redis optional)
REDIS_URL="" # Optional: for distributed rate limiting

# Feature Flags
ENABLE_2FA="true"
ENABLE_MAGIC_LINK="false"
ENABLE_OFFLINE_MODE="true"

